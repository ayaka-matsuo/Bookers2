
<div class="container">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<div class="row">
			  		<h2>User info</h2>
			  		<%= attachment_image_tag @bookf.user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
			  		<table class="table">
			  			<tbody>
			  				<tr>
				  				<th>name</th>
				  				<th><%= @bookf.user.name %></th>
				  			</tr>
				  			<tr>
				  				<th>introduction</th>
				  				<th><%= @bookf.user.introduction %></th>
				  			</tr>
			  			</tbody>
			  		</table>

			  			<%= link_to "", edit_user_path(@bookf.user_id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

			  	</div>

			  	<div class="row">
						<h2>New book</h2>
						<%= form_for(@book) do |f| %>

						<h4>Title</h4>
						<%= f.text_field :title, :size=>"32.8x26" %>

						<h4>Opinion</h4>
						<%= f.text_area :body, :size=>"31.8x2" %>

						<%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
						<% end %>
				</div>
			</div>

			<div class="col-xs-9">
						<h2>Book detail</h2>
							<table class="table">
						  		<tbody>
						 				<tr>
						 					<td>
						 						<%= link_to user_path(@user) do %>
						 							<%= attachment_image_tag @bookf.user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %>
						 							<br>
						 							<%= @bookf.user.name %>
						 						<% end %>
						 					</td>
						 					<% if @bookf.user.id == current_user.id %>
						 						<td>
						 							<%= @bookf.title %>
						 						</td>
						 						<td>
						 					    	<%= @bookf.body %>
						 						</td>
												<td>
												  <%= link_to "edit", edit_book_path(@bookf.id), class: "btn btn-success" %>
												 </td>
												 <td>
												  <%= link_to "destroy", book_path(@bookf.id), class: "btn btn-danger",  method: :delete, "data-confirm" => "本当に消しますか？" %>
							 					</td>
							 				<% else %>
							 					<td></td>
							 					<td></td>
							 					<td>
						 						<%= @bookf.title %>
						 						</td>
						 						<td>
						 					    <%= @bookf.body %>
						 						</td>
						 					<% end %>
						 				</tr>
						 		</tbody>
							</table>
			</div>
		</div>
	</div>
</div>
